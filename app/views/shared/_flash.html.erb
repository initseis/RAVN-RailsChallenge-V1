<div id="flash" class="">
  <% flash.each do |type, message| %>
    <div class="transition transform duration-1000 fixed z-10 right-3 md:right-6 top-3 md:top-6 max-w-sm text-sm pl-3 md:pl-0" data-controller="flash" data-transition-enter-from="opacity-0 translate-x-6" data-transition-enter-to="opacity-100 translate-x-0" data-transition-leave-from="opacity-100 translate-x-0" data-transition-leave-to="opacity-0 translate-x-6">
      <%= tag.div class: class_names("bg-white flex items-start rounded shadow-md p-4 mb-2 gap-3 border-l-4", type == "notice" ? "border-green-500 text-green-500" : "border-red-500 text-red-500") do %>
        <svg class="flex-shrink-0 inline size-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
        </svg>
        <p class="text-justify text-dark"><%= message %></p>
        <button type="button" data-action="flash#dismiss" class="text-gray-400 hover:text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="size-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      <% end %>
    </div>
  <% end %>
</div>
