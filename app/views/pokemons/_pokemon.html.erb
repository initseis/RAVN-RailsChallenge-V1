<div class="divTableRow">
  <div class="divTableCell border-y !py-4 border-l rounded-l-3xl"><%= pokemon.name %></div>
  <div class="divTableCell border-y !py-4 text-white"><button class="rounded-xl py-1 px-2 bg-<%= pokemon.pokemon_type %>"><%= pokemon.pokemon_type %></button></div>
  <div class="divTableCell border-y !py-4 border-r rounded-r-3xl">
    <div class="flex items-center gap-2">
      <%= link_to add_pokemons_path(pokemon), title: "Edit", class: "block size-4" do %>
        <%= Icon.edit %>
      <% end %>
      <%= link_to add_pokemons_path(pokemon), title: "Delete", class: "block size-5 text-red-500" do %>
        <%= Icon.trash %>
      <% end %>
    </div>
  </div>
</div>
<div class="h-3"></div>