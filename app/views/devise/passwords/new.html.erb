<div class="flex flex-col items-center pt-6">
  <h2 class="mb-2">Forgot your password?</h2>
  <div class="w-full max-w-xs">
    <%= form_with model: resource, url: password_path(resource_name), html: { method: :post }, data: { turbo: false } do |f| %>
      <%= render partial: "shared/form_errors", locals: { object: f.object } %>
      <div class="mb-2">
        <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email", autocomplete: "off", class: "input" %>
      </div>

      <div class="mb-2">
        <%= f.button "Send me reset password instructions", class: "btn" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
