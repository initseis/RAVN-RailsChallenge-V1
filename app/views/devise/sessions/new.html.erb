<div class="flex justify-center pt-6">
  <div class="w-full max-w-xs">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-2">
        <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email", autocomplete: "off", class: "input" %>
      </div>

      <div class="mb-2">
        <%= f.password_field :password, required: true, placeholder: "Password", class: "input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="btn mb-2">
        <%= f.button "Login" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
