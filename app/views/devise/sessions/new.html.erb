<div class="flex justify-center pt-6">
  <div class="w-full max-w-xs">
    <%= form_with model: resource, url: session_path(resource_name), data: { turbo: false } do |f| %>
      <div class="mb-2">
        <%= f.text_field :login, required: true, autofocus: true, placeholder: "Email or username", autocomplete: "off", class: "input" %>
      </div>

      <div class="mb-2">
        <%= f.password_field :password, required: true, placeholder: "Password", class: "input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="mb-2">
        <%= f.button "Login", class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
